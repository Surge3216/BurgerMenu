<div class="row">
    <div class="col-md-6 mb-6">
        <h1>Menu:</h1>
        <ol>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
            {{burger_name}} <button class="changeDevoured btn-sm bg-dark text-white" data-id="{{id}}" data-newEat="{{devoured}}" type="submit">Eat It!</button>
            </li>
            {{/unless}}
            {{/each}}
        </ol>
    </div>
    <div class="col-md-6 mb-6">
        <h1>All Gone!</h1>
        <ol>
            {{#each burgers}}
            {{#if devoured}}
            <li>
                {{burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </ol>
    </div>
</div>
<div class='row'>
    <div class="col-md-12">
        <form id="create-form">
        <div class="form-group">
            <label for="newBurger">Your burger isn't here? Let's add one!</label>
            <input type="text" class="form-control" name="" id="burg" aria-describedby="helpId" placeholder="What is your burger called?">
            
        </div>
        <button type="submit" class="bg-dark text-white">Add That Burger So I Can Eat It!</button>
        </form>
    </div>
</div>